{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true
  },
  "include": [
    "*.ts",
    "*.tsx",
    "components/**/*",
    "services/**/*",
    "store/**/*",
    "utils/**/*",
    "hooks/**/*",
    "tests/**/*",
    "styles/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server",
    "src/__tests__",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vitest.config.ts"
  ]
}