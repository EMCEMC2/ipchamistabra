# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML
[*.{yml,yaml}]
indent_size = 2

# CSS
[*.{css,scss,less}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles (require tabs)
[Makefile]
indent_style = tab

# Package files
[{package.json,package-lock.json}]
indent_size = 2
